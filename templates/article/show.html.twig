{% extends 'base.html.twig' %}

{% block title %}{{ article.titleArticle }}{% endblock %}

{% block body %}
<h1 class="mb-3">{{ article.titleArticle }}</h1>

<p class="text-muted mb-1">
    Publié le :
    {{ article.publishedAt ? article.publishedAt|date('d/m/Y H:i') : 'Non publié' }}
</p>

<p class="text-muted mb-1">
    Créé le : {{ article.createdAt|date('d/m/Y H:i') }}
</p>

{% if article.updatedAt %}
<p class="text-muted mb-3">
    Mis à jour le : {{ article.updatedAt|date('d/m/Y H:i') }}
</p>
{% endif %}

<p class="mb-3">
    <strong>Auteur :</strong>
    {{ article.writeBy.firstnameUser }} {{ article.writeBy.nameUser }}
</p>

{% if article.imageArticle %}
    <img src="{{ article.imageArticle }}" class="img-fluid rounded mb-4" alt="Image article">
{% endif %}

<p class="mb-4">
    {{ article.contentArticle }}
</p>

<p>
    <strong>Catégories :</strong>
    {% for category in article.categories %}
        <span class="badge bg-primary">{{ category.nameCat }}</span>
    {% endfor %}
</p>

<a href="{{ path('articles_list') }}" class="btn btn-primary mt-4">
    Retour à la liste
</a>
{% endblock %}
